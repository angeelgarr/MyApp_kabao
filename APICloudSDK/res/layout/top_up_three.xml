<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#f2f2f8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2f2f8"
        android:orientation="vertical" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_gravity="center_vertical"
            android:background="@color/kabao" 
            >
            <ImageButton 
                android:id="@+id/top_ib_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:background="@drawable/white_left_arrow"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:text="支付订单"
                android:textColor="#ffffff"
                />
            
        </RelativeLayout>
        <View 
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="#e7e7eb"/>
        
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:paddingLeft="10dip"
            android:gravity="center_vertical"
            android:text="请输入金额"
            />
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_gravity="center_vertical"
            android:background="@android:color/white"
            >
            <EditText 
                android:id="@+id/top_ed_amount"
                android:layout_width="200dip"
                android:layout_height="50dip"
                android:background="@null"
                android:ems="10"
                android:hint="请输入充值金额大于10元"
                android:inputType="number"
                android:maxLines="1"
                android:paddingLeft="10dip"
                android:singleLine="true"
                android:textSize="14sp"
                android:textColorHint="#aaa4a4"
                android:textColor="#ff5435"
                />
        </LinearLayout>
        
        <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e7e7eb"
            />
        
        <TextView 
            android:layout_width="match_parent"
			android:layout_height="33dip"
			android:text="选择支付方式" 
			android:paddingLeft="10dip"
			android:paddingTop="10dip"         
            />
         <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e7e7eb"
            />
         <ListView 
             android:id="@+id/top_lv_payChoice"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="#ffffff"
             android:cacheColorHint="#00000000"
             android:choiceMode="singleChoice"
             android:divider="@null"
             android:orientation="vertical"
             ></ListView>
         <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e7e7eb"
            />
         
         <LinearLayout 
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             >
             <LinearLayout
                 android:id="@+id/top_ll_ok"
                 android:layout_width="match_parent"
                 android:layout_height="50dip"
                 android:orientation="horizontal"
                 android:layout_marginLeft="10dip"
                 android:layout_marginRight="10dip"
                 android:layout_marginTop="20dip"
                 android:layout_marginBottom="20dip"
                 android:gravity="center"
                 android:background="#ff543f" 
                 >
                 <TextView 
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textColor="@android:color/white"
                     android:text="确认充值"
                     />
             </LinearLayout>
         </LinearLayout>
         
         <TextView
            android:id="@+id/top_tv_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp" />
         
         <LinearLayout 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:visibility="gone"
             >
             <include layout="@layout/top_up_two"/>
         </LinearLayout>
         
    </LinearLayout>
    
    
    

</ScrollView>
